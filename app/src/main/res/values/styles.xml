<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Text styles -->
    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <!--<item name="android:textColor">@color/ft_accent</item>-->
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="TextAppearance.Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Subhead">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="TextAppearance.Body.Dim">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- Widget styles -->
    <style name="Widget" />

    <style name="Widget.Footistics" parent="Widget" />

    <!-- Grid views with cards -->
    <!-- The support CardView adds padding for compat shadows on pre-v21, adjust accordingly. -->
    <!-- Note: Ripple breaks when setting selector on item instead of the List/GridView. -->
    <style name="Widget.Footistics.CardGrid">
        <item name="android:listSelector">?attr/selectableItemBackground</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">@dimen/grid_topbottom_padding</item>
        <item name="android:paddingBottom">@dimen/grid_topbottom_padding</item>
        <item name="android:paddingLeft">@dimen/grid_leftright_padding</item>
        <item name="android:paddingRight">@dimen/grid_leftright_padding</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:horizontalSpacing">@dimen/grid_horizontal_spacing</item>
        <item name="android:verticalSpacing">@dimen/grid_vertical_spacing</item>
    </style>

    <style name="Widget.Footistics.CardGrid.FastScroll">
        <item name="android:paddingRight">0dp</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <!-- Styles for pop-up dialogs -->
    <style name="Footistics.DialogTheme" parent="Theme.AppCompat.Light.Dialog">

        <item name="colorPrimary">@color/ft_accent</item>
        <item name="colorPrimaryDark">@color/ft_primary_dark</item>
        <item name="colorAccent">@color/ft_primary</item>
    </style>

</resources>
