<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" />

    <style name="Theme.BaseFootistics" parent="Theme.AppCompat.NoActionBar">

        <!-- All customizations that are SPECIFIC to API-level 15+ go here. -->

    </style>

    <!-- Footistics default theme -->
    <style name="Theme.Footistics" parent="Theme.BaseFootistics">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <!--   your app's branding color (for the app bar) -->
        <item name="colorPrimary">@color/ft_primary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/ft_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/ft_accent</item>

        <!-- Remove default window shadow -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- Text -->
        <item name="android:textAppearance">@style/TextAppearance</item>

        <!-- Colors -->
        <item name="ftColorBackgroundDrawer">@color/ft_navbar_background</item>

        <!-- Drawables -->
        <item name="drawableAccount">@drawable/ic_person_grey600_24dp</item>
        <item name="drawableDivider">@drawable/divider</item>
        <item name="drawableSeasonalStats">@drawable/ic_event_white_24dp</item>
        <item name="drawableGlobalStats">@drawable/ic_assessment_white_24dp</item>
        <item name="drawableSettings">@drawable/ic_action_settings</item>
        <item name="drawableHelp">@drawable/ic_action_help</item>

    </style>


    <style name="Theme.BaseFootistics.Light" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- All customizations that are SPECIFIC to API-level 15+ go here. -->

    </style>

    <!-- Footistics light theme -->
    <style name="Theme.Footistics.Light" parent="Theme.BaseFootistics.Light">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <!--   your app's branding color (for the app bar) -->
        <item name="colorPrimary">@color/ft_primary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/ft_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/ft_accent</item>

        <!-- Action bar -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <!-- Remove default window shadow -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- Text -->
        <item name="android:textAppearance">@style/TextAppearance</item>

        <!-- Colors -->
        <item name="ftColorBackgroundDrawer">@color/ft_navbar_background_inverse</item>

        <!-- Drawables -->
        <item name="drawableAccount">@drawable/ic_person_grey600_24dp</item>
        <item name="drawableDivider">@drawable/divider_light</item>
        <item name="drawableSeasonalStats">@drawable/ic_event_grey600_24dp</item>
        <item name="drawableGlobalStats">@drawable/ic_assessment_grey600_24dp</item>
        <item name="drawableSettings">@drawable/ic_action_settings_inverse</item>
        <item name="drawableHelp">@drawable/ic_action_help_inverse</item>

    </style>


</resources>